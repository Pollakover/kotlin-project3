<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007EFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Первый фрагмент"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:text="Использовать\nFragmentManager:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonFragmentManager"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="264dp"
        android:layout_marginBottom="8dp"
        android:text="Использовать\nNavigation API:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonNavigationAPI"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonFragmentManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На второй\nфрагмент"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#F52C5D"/>

    <Button
        android:id="@+id/buttonNavigationAPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На второй\nфрагмент"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#F52C5D"/>

</androidx.constraintlayout.widget.ConstraintLayout>